@inject PlotlyGrapher Grapher
@page "/info"
@using Plotly.Blazor.Traces.ScatterLib
@using Financr.Utils
@using Microsoft.AspNetCore.Components


<PageTitle>Index</PageTitle>

<MudCard class="ma-2">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Amortization</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <PlotlyChart @bind-Config="Grapher.Config" @bind-Layout="Grapher.Layout" bind-Data="Grapher.Data" @ref="Grapher.Chart" />
    </MudCardContent>
</MudCard>

@code {
    protected override async void OnInitialized()
    {
        await Grapher.BuildChart();
    }
}